<%- include ('../playouts/headlink.ejs')-%>
<link rel="stylesheet" type="text/css" href="./css/homestyle.css" />
<link rel="stylesheet" type="text/css" href="./css/grid.css" />

<!-- slide+navbar -->
<%- include ('../playouts/navbar.ejs')-%>

<div class="carousel slide mr-5 ml-5" id="slide" data-ride="carousel">
    <!-- Indicators-->
    <ul class="carousel-indicators">
        <li class="active" data-target="#slide" data-slide-to="0"></li>
        <li data-target="#slide" data-slide-to="1"></li>
        <li data-target="#slide" data-slide-to="2"></li>
    </ul>
    <!-- The slideshow-->
    <div class="carousel-inner">
        <div class="carousel-item active"><img src="/image/carousel3.jpg" width="1320" height="580" /></div>
        <div class="carousel-item"><img src="/image/carousel1.jpg" width="1320" height="580" /></div>
        <div class="carousel-item"><img src="/image/carousel2.jpg" width="1320" height="580" /></div>
    </div>
    <!-- Left and right controls-->
    <a class="carousel-control-prev" href="#slide" data-slide="prev"><span class="carousel-control-prev-icon"></span></a>
    <a class="carousel-control-next" href="#slide" data-slide="next"><span class="carousel-control-next-icon"></span></a>
</div>
<!-- products-->
<% var catekeys = Object.keys(cates); %>
<% var productkeys = Object.keys(products); %>
<% catekeys.forEach(function(cate){var id = 0;%>
<div class="row mt-40" id="featured"></div>
<div class="container cates">
    <h3 class="headingcate mt-2 mb-4 d-flex justify-content-center row">
        <span class="maintext"><%= cates[cate].name%></span>
    </h3>
    <div class="d-flex justify-content-around row productcontainer">
        <% productkeys.forEach(function(product){if(id < 4) { if(products[product].cate == cates[cate].id){ id ++ ;  %>
        <ul class="col-md-3 col-sm-6">
                <li class="itemcontainer">
                    <h6 class="mt-3 mb-3 "><%= products[product].name%></h6>
                    <div class="thumbnail m-2"><a class="linkdetail" href="/detail/<%= products[product].namekodau%>.<%= products[product].id%>.<%= cates[cate].id%>"><img alt="" src="<%= products[product].img%>"/></a>
                        <div class="descristion mt-1 ml-2">
                            <p> <%= products[product].des%></p>
                        </div>
                        <div class="pricetag m-2 d-flex justify-content-between">
                            <p class="pricenew align-self-center"><%= products[product].price%></p>
                            <a class="btn btn-danger" href="/addtocart/<%= products[product].id%>"><i class="fas fa-cart-plus"></i></a>
                        </div>
                    </div>
                </li>
        </ul>
        <%}}});%>
    </div>
</div>
<%});%>
<script src="./js/home.js"></script>
<%- include ('../playouts/footer.ejs')-%>